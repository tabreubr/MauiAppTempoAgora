<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTempoAgora.MainPage"
             Title="Previsão do Tempo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="🌤️ Previsão do Tempo" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Frame CornerRadius="10" BackgroundColor="Transparent" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Digite o nome da cidade:" 
                           FontSize="16" 
                           FontAttributes="Bold" />

                    <Entry x:Name="txt_cidade" 
                           Placeholder="Ex: São Paulo, BR"
                           ClearButtonVisibility="WhileEditing"/>

                    <Button Text="Buscar Previsão" 
                            Clicked="Button_Clicked"
                            BackgroundColor="#007BFF"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"/>
                </VerticalStackLayout>
            </Frame>

            <Frame CornerRadius="10" BackgroundColor="Transparent" Padding="15">
                <Label x:Name="lbl_res" 
                       Text="" 
                       FontSize="14"
                       LineBreakMode="WordWrap"
                       MaxLines="15"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>